package entity;

import java.awt.Graphics2D;
import java.awt.image.BufferedImage;
import java.io.IOException;

import javax.imageio.ImageIO;

import entity.Entity;
import main.GamePanel;

public class Monster_1 extends Entity{
       GamePanel gp;
       
       public Monster_1(GamePanel gp) {
       super(gp);
//	   this.KeyH = keyH;
	   setDefaultValue();
	   getMonsterImage();
	}
	
	public void setDefaultValue() {
		x = 0;
		y = 0;
		speed = 4;
		direction = "down";
	}
   
	public void getMonsterImage() {
		try {
			up = ImageIO.read(getClass().getResourceAsStream("/monster/quaivat1_down.png"));
			down = ImageIO.read(getClass().getResourceAsStream("/monster/quaivat1_up.png"));
			left = ImageIO.read(getClass().getResourceAsStream("/monster/quaivat1_left.png"));
			right = ImageIO.read(getClass().getResourceAsStream("/monster/quaivat1_right.png"));
		}
		catch(IOException e) {
			e.printStackTrace();
		}
	}
	public void update() {
		if(upPressed == true) {
			direction = "up";
			y -= speed;
		}
		else if(KeyH.downPressed == true) {
			direction = "down";
			y += speed;
		}
		else if(KeyH.leftPressed == true) {
			direction = "left";
			x -= speed;
		}
		else if(KeyH.rightPressed == true) {
			direction = "right";
			x += speed;
		}
	}
	public void draw( Graphics2D g2) {
//		g2.setColor(Color.white);
//		g2.fillRect(x, y, gp.tileSize, gp.tileSize);
		
		BufferedImage image = null;
		switch(direction) {
		case"up" :
			image = up;
			break;
		case"down":
		    image = down;
		    break;
		case"right":
			image = right;
			break;
		case"left":
			image = left;
			break;
		}
	
		g2.drawImage(image, x, y,gp.tileSize,gp.tileSize,null);
	}
	
}

}
